{
    "kind": "collectionType",
    "collectionName": "courses",
    "info": {
        "singularName": "course",
        "pluralName": "courses",
        "displayName": "Course",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "uid": {
            "type": "uid",
            "required": true
        },
        "title": {
            "type": "string",
            "required": true
        },
        "chapters": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::chapter.chapter",
            "mappedBy": "courses"
        },
        "description": {
            "type": "dynamiczone",
            "components": [
                "media.text",
                "media.video"
            ],
            "required": true
        }
    }
}
